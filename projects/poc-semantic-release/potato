#! /usr/bin/env python3

from flask import Flask, jsonify
import random

app = Flask(__name__)

POTATO_FACTS = [
    "Potatoes were the first vegetable to be grown in space.",
    "There are over 4,000 varieties of potatoes worldwide.",
    "The world's largest potato weighed over 11 pounds.",
    "Potatoes are a good source of vitamins C and B6.",
    "The potato is the world's fourth largest food crop, following rice, wheat, and maize.",
]

@app.route('/random', methods=['GET'])
def get_random_potato_fact():
    fact = random.choice(POTATO_FACTS)
    return jsonify({"fact": fact})

@app.route('/health', methods=['GET'])
def health_check():
    return jsonify({"status": "healthy"}), 200

if __name__ == '__main__':
    app.run(debug=True, host='0.0.0.0', port=8080)